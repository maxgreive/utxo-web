---
import { getRelativePostPath } from "@src/utilities/getPostPath";
import FormattedDate from "./FormattedDate.astro";
import { Picture } from "astro:assets";
import { getPostDescription } from "@src/utilities/getPageDescription";
import { people, getPersonPath, type Person } from "@src/utilities/people";

const { frontmatter, post } = Astro.props,
  collection = frontmatter.collection;

let person: Person = people.find((person) => {
  return person.fullName === post.data.author;
});
---

<div class="col-md-6">
  <div class="blog-post-item-two">
    <div class="blog-post-thumb-two">
      <a
        href={`${getRelativePostPath(
          Astro.currentLocale,
          collection,
          post.slug
        )}`}
      >
        <Picture
          src={post.data.previewImage}
          formats={["avif", "webp"]}
          alt={post.data.title}
          width={510}
          height={200}
        />
      </a>
      {
        post.data.tags.length && (
          <a
            href={`${getRelativePostPath(
              Astro.currentLocale,
              collection,
              post.slug
            )}`}
            class="tag tag-two"
          >
            {post.data.tags[0]}
          </a>
        )
      }
    </div>
    <div class="blog-post-content-two">
      <h2 class="title">
        <a
          href={`${getRelativePostPath(
            Astro.currentLocale,
            collection,
            post.slug
          )}`}>{post.data.title}</a
        >
      </h2>
      <p class="line-clamp-3">{getPostDescription(post)}</p>
      <div class="blog-meta">
        <ul class="list-wrap">
          <li>
            <a
              href={getPersonPath(Astro.currentLocale, person.id)}
            >
              <Picture
                src={person.avatar}
                width={65}
                height={65}
                formats={["avif", "webp"]}
                alt="Avatar"
              />
              {person.fullName}
            </a>
          </li>
          <li>
            <i class="far fa-calendar"></i>
            <FormattedDate date={post.data.pubDate} />
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

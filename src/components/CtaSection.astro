---
import { Picture, getImage } from "astro:assets";
import Shape from "../images/h9_cta_shape.png";
import backgroundImage from "@src/images/h9_cta_bg.jpg";

const { props, classes, center } = Astro.props,
  sectionBackground = await getImage({ src: backgroundImage });
---

{
  props && (
    <section class={`cta-area-seven fix ${classes}`}>
      <div
        class="cta-bg"
        style={`background-image: url('${sectionBackground.src}')`}
      />
      <div class="container">
        <div class="row align-items-center">
          <div class={`${center ? 'col-lg-12 mb-4' : 'col-lg-7'}`}>
            <div class={`section-title-two white-title text-center ${!center && 'text-lg-start'} tg-heading-subheading animation-style3`}>
              <h2 class="title tg-element-title mt-0">{props.title}</h2>
            </div>
          </div>
          <div class={`col-lg-${center ? '12' : '5'}`}>
            <div class={`cta-btn-two text-center ${!center && 'text-lg-end'}`}>
              <a href={props.buttonLink} class="btn btn-three border-btn">
                {props.buttonLabel}
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="cta-shape">
        <Picture
          src={Shape}
          formats={["avif", "webp"]}
          alt="shape"
          data-aos="fade-down-left"
          data-aos-delay="400"
        />
      </div>
    </section>
  )
}

---
import { Picture } from "astro:assets";
import Shape from "../images/h9_cta_shape.png";

const { frontmatter } = Astro.props;
---

<section class="cta-area-seven fix">
  <div class="cta-bg" data-background="/assets/img/bg/h9_cta_bg.jpg"></div>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-7">
        <div
          class="section-title-two white-title text-center text-lg-start tg-heading-subheading animation-style3"
        >
          <h2 class="title tg-element-title">
            {frontmatter.ctaSection.title}
          </h2>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="cta-btn-two">
          <a
            href={frontmatter.ctaSection.buttonLink}
            class="btn btn-three border-btn"
          >
            {frontmatter.ctaSection.buttonLabel}
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="cta-shape">
    <Picture
      src={Shape}
      formats={["avif", "webp"]}
      alt="shape"
      data-aos="fade-down-left"
      data-aos-delay="400"
    />
  </div>
</section>

              <div class="footer-image">
                <Picture src={btcBundesverbandImage} formats={["avif", "webp"]} width={320} alt="TÃœV Rheinland Mitglied Logo"/>
                <Picture src={tuvRheinlandImage} formats={["avif", "webp"]} width={100} alt="TÃœV Rheinland Mitglied Logo"/>
              </div>
